<%= form_for outline do |f| %>

  <div>
    <%= f.label :title %>
    <%= f.text_field :title, size: 70 %>
  </div>

  <br/>

  <div>
    <%= f.label :publish_date %>
    <%= f.date_field :publish_date %>
  </div>

  <br/>

  <div>
    <%= f.text_area :body, cols: 76, rows: 30 %>
  </div>

  <br/>

  <%= f.submit %>
<% end %>